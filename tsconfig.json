{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@globals": ["./globals/index.ts"],
      "@ui/*": ["./ui/*"],
      "@api/reports": ["./api/reports/index.ts"],
      "@api/threads": ["./api/threads/index.ts"],
      "@api/error-logs": ["./api/error-logs/index.ts"],
      "@api/utils": ["./api/utils/index.ts"],
      "@modules/home": ["./modules/home/index.ts"],
      "@modules/report": ["./modules/report/index.ts"],
      "@modules/thread": ["./modules/thread/index.ts"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
